<?xml version="1.0" encoding="UTF-8" standalone="no"?><templates><template autoinsert="true" context="jsp_new" deleted="false" description="非弹出的操作页" enabled="true" name="opr">&lt;%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%&gt;&#13;
&lt;%@ taglib prefix="h" uri="/WEB-INF/tag/hanweb-tags.tld"%&gt;&#13;
&lt;!DOCTYPE html&gt;&#13;
&lt;html&gt;&#13;
&lt;head&gt;&#13;
&lt;meta http-equiv="X-UA-Compatible" content="IE=edge" /&gt;&#13;
&lt;meta http-equiv="Content-Type" content="text/html; charset=UTF-8"&gt;&#13;
&lt;title&gt;&lt;!--标题--&gt;&lt;/title&gt;&#13;
&lt;h:head pagetype="page" validity="true"&gt;&lt;/h:head&gt;&#13;
&lt;!--使用$${contextPath}可以获得应用路径，并无/结尾--&gt;&#13;
&lt;script&gt;&#13;
/**&#13;
* 表单验证&#13;
*/&#13;
$$(function(){&#13;
	$$('#oprform').validity(function() {&#13;
		/*&#13;
		$$('#name').require('机构名称不能为空').match('username1',&#13;
				'机构名称只能由字母、数字、下划线、中文组成').maxLength(33,&#13;
				'机构名称不能超过33个字');&#13;
		*/&#13;
	});&#13;
});&#13;
&lt;/script&gt;&#13;
&lt;/head&gt;&#13;
&lt;body channel="develop"&gt;&#13;
	&lt;div id="page-title"&gt;&#13;
		&lt;span class="btn switchmenu"&gt;&lt;i class="icon-sitemap"&gt;&lt;/i&gt; &lt;!--模块名称 --&gt;&#13;
			- &lt;span id="page-title-text"&gt;&lt;!--子名称（可以没有） --&gt;&lt;/span&gt; &lt;i class="icon-caret-down"&gt;&lt;/i&gt;&#13;
		&lt;/span&gt;&#13;
	&lt;/div&gt;&#13;
	&lt;div id="page-content"&gt;&#13;
    	&lt;!--表单主体--&gt;&#13;
		&lt;form action="$${url}" method="post" id="oprform" name="oprform"&gt;&#13;
        	&lt;!--隐藏变量区--&gt;&#13;
			&lt;!--&lt;input type="hidden" name="pid" id="pid" value="$${group.pid}" /&gt; --&gt;&#13;
			&lt;table border="0" align="center" cellpadding="10" cellspacing="0" class="table"&gt;&#13;
				&lt;!--每行--&gt;&#13;
                &lt;!--&#13;
				&lt;tr&gt;&#13;
					&lt;td align="right" class="label"&gt;机构名称&lt;/td&gt;&#13;
					&lt;td class="required"&gt;*&lt;/td&gt;&#13;
					&lt;td&gt;&lt;input type="text" id="name" name="name" maxlength="33"&#13;
						class="input-text" value="$${group.name }" /&gt;&lt;/td&gt;&#13;
				&lt;/tr&gt;&#13;
                --&gt;&#13;
                &lt;!--表单按钮区--&gt;&#13;
				&lt;tr&gt;&#13;
					&lt;td height="60" colspan="4" align="center"&gt;&#13;
						&lt;input type="submit" class="btn btn-primary" value="保存"/&gt;&#13;
						&lt;input type="button" class="btn" value="返回" onclick="history.go(-1);" /&gt;&#13;
					&lt;/td&gt;&#13;
				&lt;/tr&gt;&#13;
			&lt;/table&gt;&#13;
		&lt;/form&gt;&#13;
	&lt;/div&gt;&#13;
&lt;/body&gt;&#13;
&lt;/html&gt;</template></templates>